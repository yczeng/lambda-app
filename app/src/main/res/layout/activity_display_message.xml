<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/litegreen"
    tools:context="com.example.root.lambda.DisplayMessageActivity">

    <Button
        android:id="@+id/button5"
        android:layout_width="223dp"
        android:layout_height="74dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/lambdagreen"
        android:fontFamily="sans-serif"
        android:onClick="goHome"
        android:text="Restart"
        android:textAllCaps="false"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_marginBottom="168dp"
        android:layout_marginEnd="110dp"
        android:layout_marginStart="30dp"
        android:backgroundTint="@color/lambdagreen"
        android:fontFamily="sans-serif"
        android:onClick="sendLychee"
        android:text="Lychee Green Tea"
        android:textAllCaps="false"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        app:layout_constraintStart_toEndOf="@+id/button8" />


    <Button
        android:id="@+id/button7"
        android:layout_width="230dp"
        android:layout_height="70dp"
        android:layout_marginBottom="168dp"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="50dp"
        android:backgroundTint="@color/lambdagreen"
        android:fontFamily="sans-serif"
        android:onClick="sendMilk"
        android:text="Black Milk Tea"
        android:textAllCaps="false"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button8"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginBottom="168dp"
        android:layout_marginEnd="100dp"
        android:backgroundTint="@color/lambdagreen"
        android:fontFamily="sans-serif"
        android:onClick="sendTaro"
        android:text="Taro Milk Tea"
        android:textAllCaps="false"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button2" />

    <Button
        android:id="@+id/button8"
        android:layout_width="245dp"
        android:layout_height="70dp"
        android:layout_marginBottom="168dp"
        android:layout_marginEnd="60dp"
        android:backgroundTint="@color/lambdagreen"
        android:fontFamily="sans-serif"
        android:onClick="sendMango"
        android:text="Mango Black Tea"
        android:textAllCaps="false"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintStart_toEndOf="@+id/button7" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="522dp"
        android:layout_height="92dp"
        android:layout_marginEnd="352dp"
        android:layout_marginTop="48dp"
        android:fontFamily="sans-serif"
        android:text="Choose your flavor"
        android:textColor="@color/lambdagrey"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="362dp"
        android:layout_height="288dp"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="300dp"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.52"
        app:srcCompat="@mipmap/taro" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="288dp"
        android:layout_height="224dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="99dp"
        app:layout_constraintBottom_toTopOf="@+id/button8"
        app:layout_constraintEnd_toStartOf="@+id/imageView5"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@mipmap/mango2" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="289dp"
        android:layout_height="295dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@mipmap/lychees" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="266dp"
        android:layout_height="256dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/milk5" />

</android.support.constraint.ConstraintLayout>
