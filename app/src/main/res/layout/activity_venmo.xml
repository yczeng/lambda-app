<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/litegreen"
    tools:context="com.example.root.lambda.venmo">

    <Button
        android:id="@+id/button4"
        android:layout_width="223dp"
        android:layout_height="74dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/lambdagreen"
        android:fontFamily="sans-serif"
        android:onClick="goHome"
        android:text="Restart"
        android:textAllCaps="false"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="1066dp"
        android:layout_height="129dp"
        android:layout_marginBottom="28dp"
        android:layout_marginEnd="105dp"
        android:layout_marginStart="109dp"
        android:layout_marginTop="132dp"
        android:fontFamily="sans-serif"
        android:text="Waiting for connection..."
        android:textAlignment="center"
        android:textColor="@color/lambdagrey"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="665dp"
        android:layout_height="48dp"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="35dp"
        android:text="If you see any issues, please email lambda-tea@mit.edu."
        android:textAlignment="center"
        android:textColor="@color/lambdagrey"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="443dp"
        android:layout_height="315dp"
        android:layout_marginBottom="35dp"
        android:layout_marginEnd="410dp"
        android:layout_marginStart="427dp"
        android:layout_marginTop="28dp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@mipmap/venmo" />


</android.support.constraint.ConstraintLayout>
